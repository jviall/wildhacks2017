   <script src="/javascripts/renderer.js"></script>
  <script src="/javascripts/compromise.min.js"></script>
  <script src="/javascripts/listen.js"></script>
  <script src="/javascripts/worker.js"></script>
  <script src="/javascripts/nlp.js"></script>

</head>
<body>
  <h1>{{title}}</h1>
  <p>Welcome to {{name}}</p>
  <div class="buttons">
      <button id="listen" class="btn-danger buttons" onclick="startRecord(function(res) {
            //callMe(res);
            //console.log('res:' + res);
            var fixed = res.charAt(0).toUpperCase() + res.slice(1) + '.';
            //appends to scrolling text
            myNlp(res, function(obj) {
                //addToScene(obj);
                console.log(obj.fileName);
                backgroundToggle(obj.fileName);
            });
            var fragment = create('<p class=&quot;scrolling&quot;>' + fixed + '</p>');
            document.getElementById('append-here').appendChild(fragment)
            //console.log('res:' + res);
      })">Start</button>
      <button id="stopListen" class="btn-secondary buttons" onclick="stopRecording()">Stop</button>
  </div>
  <div class="app-container">
      <div class="canvas">
          <div id="mainCanvas" width="720px" height="715">
              <img src="../images/objects/blue_potion.png" id="blue_potion">
          </div>
      </div>
      <div style="position: relative; height:720px" id="speechBox" >
          <marquee id="append-here" class="GeneratedMarquee" direction="up" scrollamount="3" behavior="scroll">
                <p class="scrolling">Test text</p>
          </marquee>
      </div>
  </div>

